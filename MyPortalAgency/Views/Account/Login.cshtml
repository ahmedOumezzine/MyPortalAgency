@model MyPortalAgency.Models.LoginModel 
@{
    ViewData["Title"] = "Index";
}

@section pageheader{
    <section class="page-header page-header-classic">
        <div class="container">
            <div class="row">
                <div class="col">
                    <ul class="breadcrumb">
                        <li><a href="#">Home</a></li>
                        <li class="active">Login</li>
                    </ul>
                </div>
            </div>
            <div class="row">
                <div class="col p-static">
                    <span class="page-header-title-border visible" style="width: 196.703px;"></span>
                    <h1 data-title-border="">Login</h1>
                </div>
            </div>
        </div>
    </section>
}
 

<div class="container">

    <div class="row">
        <div class="col">

            <div class="featured-boxes">
                <div class="row">
                    <div class="col-md-12">
                        <div id="ajax-panel"></div>
                        <div id="panel-form" class="featured-box featured-box-primary text-left mt-5" style="">
                            <div class="box-content">
                                <h4 class="color-primary font-weight-semibold text-4 text-uppercase mb-3">
                                    USER AUTHENTICATION
                                </h4>
                                <form id="login-form" asp-controller="Account" asp-action="Login" method="post" role="form"
                                      data-ajax="true" data-ajax-method="POST" data-ajax-mode="replace" data-ajax-update="#formData"
                                      data-ajax-failure="failed" data-ajax-complete="completed">
                                    <section class="card">
                                        <div class="card-body">
                                            @Html.AntiForgeryToken()
                                            <div asp-validation-summary="All" class="text-danger"></div>
                                            <input type="hidden" id="ReturnUrl" name="ReturnUrl" value="@ViewBag.ReturnUrl" />
                                            <div class="form-row">
                                                <div class="form-group col">
                                                    <label>Username</label>
                                                    <input type="text" value="" id="Email" name="Email" class="form-control form-control-lg">
                                                </div>
                                            </div>
                                            <div class="form-row">
                                                <div class="form-group col">

                                                    <label>Password</label>
                                                    <input type="password" value="" id="Password" name="Password" class="form-control form-control-lg">
                                                </div>
                                            </div>
                                            <div class="form-row">
                                                <div class="form-group col-lg-6">
                                                   
                                                </div>
                                                <div class="form-group col-lg-6">
                                                    <input type="submit" id="submit" value="Login" class="btn btn-primary float-right mb-5" data-loading-text="Loading...">
                                                </div>
                                            </div>
                                        </div> 
                                    </section>
                                </form>

                                 
                            </div>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>

</div>